<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".description"
    android:background="@drawable/times_square"
    android:id="@+id/description_FramLayout">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ddffffff"
        tools:context=".description">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/description_fragment_outer_layout">

            <TextView
                android:id="@+id/location_title"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:textSize="50dp"
                android:textColor="@color/textColor"
                android:fontFamily="sans-serif"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/location_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text=""
                android:textColor="@color/textColor"
                android:fontFamily="sans-serif"
                android:textAlignment="center"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/description_fragment_inner_layout1">

                <Button
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/rounded_button2"
                    android:text="Share"
                    android:textColor="@color/textColor2"
                    android:textSize="30dp"
                    android:id="@+id/share_button"
                    android:layout_gravity="center"></Button>

                <Button
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/rounded_button2"
                    android:text="@string/map_button_text"
                    android:textColor="@color/textColor2"
                    android:textSize="30dp"
                    android:id="@+id/map_open_button"
                    android:layout_gravity="center"></Button>
            </LinearLayout>

            <GridView
                android:id="@+id/gridView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnWidth="80dp"
                android:gravity="center"
                android:numColumns="3"
                android:stretchMode="columnWidth">

            </GridView>
        </LinearLayout>


    </ScrollView>


</FrameLayout>